# http://editorconfig.org

root = true

[*.js]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[{.editorconfig,.eslintrc.yaml,.gitignore,.npmignore,.travis.yaml,bower.json,package.json}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
